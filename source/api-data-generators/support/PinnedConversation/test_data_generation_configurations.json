{
  "apis" : {
    "unPinConversations" : {
      "422" : {
        "ids[*]" : "#/generators/pinned_conversation_id",
        "ticketId" : "../Ticket/test_data_generation_configurations.json#/generators/ticket_id"
      },
      "200" : {
        "ids[*]" : "#/generators/pinned_conversation_id",
        "ticketId" : "../Ticket/test_data_generation_configurations.json#/generators/ticket_id"
      }
    },
    "pinAConversation" : {
      "422" : {
        "ticketId" : "../Ticket/test_data_generation_configurations.json#/generators/ticket_id",
        "entityId" : "#/generators/pinned_entity_id"
      },
      "200" : {
        "ticketId" : "../Ticket/test_data_generation_configurations.json#/generators/ticket_id" ,
        "entityId" : "#/generators/pinned_entity_id"
      }
    },
    "getPinnedConversations" : {
      "422" : {
        "ticketId" : "../Ticket/test_data_generation_configurations.json#/generators/ticket_id"
      },
      "200" : {
        "ticketId" : "../Ticket/test_data_generation_configurations.json#/generators/ticket_id"
      }
    }
  },
  "generators" : {
    "pinned_entity_id" : [
      {
        "type" : "conditional" ,
        "conditions" : [
          {
            "when" : {
              "key" : "$.input.body:$.type" ,
              "equals" : "COMMENTS"
            },
            "then" : {
              "use" : "../TicketComment/test_data_generation_configurations.json#/generators/ticket_comment_id"
            }
          } ,
          {
            "when" : {
              "key" : "$.input.body:$.type" ,
              "equals" : "THREADS"
            },
            "then" : {
              "use" : "../Thread/test_data_generation_configurations.json#/generators/thread_id"
            }
          }
        ]
      }
    ],
    "pinned_conversation_id" : [ {
      "type" : "dynamic",
      "generatorOperationId" : "support.PinnedConversation.pinAConversation",
      "dataPath" : "$.response.body:$.id"
    } ]
  }
}